      <% if current_user.present? %>
        <div>現在ログインしているユーザー</div>
        <%=User.find(current_user.id).name %>
      <% end %>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
      <!-- フッターのコンテンツ -->
    </footer>
  </body>
</html>
